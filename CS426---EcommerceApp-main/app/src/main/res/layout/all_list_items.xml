<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productImage"
    android:layout_width="180dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    android:background="@drawable/cart_background"
    android:elevation="3dp">

    <TextView
        android:id="@+id/allProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="title"
        android:textColor="#373b54"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/allProductPic"
        app:layout_constraintStart_toStartOf="@+id/allProductPic"
        app:layout_constraintTop_toBottomOf="@+id/allProductPic" />

    <ImageView
        android:id="@+id/allProductPic"
        android:layout_width="163dp"
        android:layout_height="118dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tomato" />

    <TextView
        android:id="@+id/allProductPrice"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="4.00"
        android:textColor="#373b54"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/allProductPic"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/allProductPic"
        app:layout_constraintTop_toBottomOf="@+id/allProductName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="$"
        android:textColor="#429730"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/allProductPrice"
        app:layout_constraintTop_toBottomOf="@+id/allProductName" />

    <ImageView
        android:id="@+id/favFoodAllProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/allProductAddButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toEndOf="@+id/allProductPrice"
        app:layout_constraintTop_toBottomOf="@+id/allProductName"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    <TextView
        android:id="@+id/allProductAddButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/greenbutton"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="Add"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/allProductPic"
        app:layout_constraintStart_toStartOf="@+id/allProductPic"
        app:layout_constraintTop_toBottomOf="@+id/allProductPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>