<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE7"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpPhone"
            android:hint="Phone Number"
            android:textColorHint="@color/quantum_grey"
            android:textColor="#03542D"
            android:textSize="34sp"
            android:inputType="phone"
            app:met_baseColor="#03542D"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="12"
            app:met_minCharacters="8"
            app:met_primaryColor="#03542D"
            app:met_singleLineEllipsis="true">
        </com.rengwuxian.materialedittext.MaterialEditText>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpName"
            android:hint="Your Name"
            android:textColorHint="@color/quantum_grey"
            android:textColor="#03542D"
            android:textSize="34sp"
            android:inputType="text"
            app:met_baseColor="#03542D"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#03542D"
            app:met_singleLineEllipsis="true">
        </com.rengwuxian.materialedittext.MaterialEditText>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpPass"
            android:hint="Password"
            android:textColorHint="@color/quantum_grey"
            android:textColor="#03542D"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="#03542D"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#03542D"
            app:met_singleLineEllipsis="true">
        </com.rengwuxian.materialedittext.MaterialEditText>

        <TextView
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#03542D"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" />

        <TextView
            android:id="@+id/haveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Already have an account? Sign in now!"
            android:textColor="#3F51B5"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>